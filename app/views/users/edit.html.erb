<h1>User info</h1>
<% if @user.errors.any? %>
  <% if @user.errors.count==1 %>
    <h3>An error has occurred.</h3>
  <%else%>
    <h3><%= @user.errors.count %>error has occurred.</h3>
  <%end%>
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model:@user, url:user_path(@user.id),method: :patch do |f| %>
  <%= f.file_field :profile_image, accept: "image/*" %>
  <label for="inputName">Name</label>
  <%= f.text_field:name, autofocus: true, id:"inputName", placeholder:"名前" %>
  <label for="inputIntroduction">introduction</label>
  <%= f.text_area :introduction %>

  <div class="new-book">
  <%=f.submit'Update User', class:"btn btn-secondary"%>
  </div>
<%end%>
