<% if @user.errors.any? %>
  <% if @user.errors.count==1 %>
    <h3>An error has occurred.</h3>
  <%else%>
    <h3><%= @user.errors.count %>error has occurred.</h3>
  <%end%>
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<div class="new-book">
  <div>
    <h1>User info</h1>
  </div>
  <%= form_with model:@user, url:user_path(@user.id), method: :patch do |f| %>
    <div>Name</div>
    <div><%= f.text_field:name %></div>
    <div>Image</div>
    <div><%= f.file_field :profile_image, placeholder: "プロフィール画像", accept:"image/*" %></div>
    <div>Introduction</div>
    <div><%=f.text_area :introduction %></div>
    <div>
      <%=f.submit'Update User', class:"btn btn-success"%>
    </div>
  <%end%>
</div>
