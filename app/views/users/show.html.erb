<div>
  <%= flash[:notice] %>
</div>

<h1>Users#show</h1>

<%= image_tag @user.get_profile_image(100,100) %>

<table class="user">
  <tr>
    <th>name</th><td><%= @user.name %></td>
  </tr>
  <tr>
    <th>introduction </th>
    <td><% int=@user.introduction %>
        <% if int.present? %>
          <%= int %>
        <% end %></td>
  </tr>
</table>

<%= link_to "プロフィール更新",edit_user_path(@user.id) %>

<h1>New book</h1>
<% new_book=Book.new %>
<%= form_with model:new_book, url:books_path, method: :post do |f| %>
  <p>Title</p>
  <%= f.text_field:title %>
  <p>Opinion</p>
  <%=f.text_area :body%>
  <div>
    <%=f.submit'Create Book'%>
  </div>
<%end%>

<table class="books">
  <tr>
    <th>title</th>
    <th>opinion</th>
  </tr>
  <% @books.each do |abook| %>
    <tr height="20">
      <td><%= abook.title %></td>
      <td><%= abook.body %></td>
      <td><%= link_to "Show", book_path(abook.id) %></td>
    </tr>
  <%end%>
</table>
