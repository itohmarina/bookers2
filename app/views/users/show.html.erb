<h1>Users#show</h1>


  <%= image_tag @user.get_profile_image(100,100) %>


<%= link_to "プロフィール更新",edit_user_path(@user.id) %>


<%= form_with model:Book.new, url:user_books_path(current_user.id), method: :post do |f| %>
  <p>Title</p>
  <%= f.text_field:title %>
  <p>Opinion</p>
  <%=f.text_area :body%>
  <div>
    <%=f.submit'Create Book'%>
  </div>
<%end%>

