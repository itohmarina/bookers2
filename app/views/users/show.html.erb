<div class="container">
  <div class="row">

    <div class="col-md-3">
      <div>
        <%= flash[:notice] %>
      </div>

      <h1>Users info</h1>
        <% if @user.profile_image.nil? %>
          <%= image_tag "no_image.jpg" %>
        <% else %>
          <%= image_tag @user.get_profile_image(100,100) %>
        <% end %>
      <table class="table">
        <tr>
          <th scope="col-md-2">name</th><td><%= @user.name %></td>
        </tr>
        <tr>
          <th>introduction </th>
          <td><% int=@user.introduction %>
              <% if int.present? %>
                <%= int %>
              <% end %></td>
        </tr>
      </table>

      <%= render 'newbook', user:@user %>

    </div>


    <div class="col-md-8 offset-md-1">
      <h1>Books</h1>
      <table class="table">
        <tr>
          <th scope="col-md-2"></th>
          <th scope="col-md-4">title</th>
          <th scope="col-md-6">opinion</th>
        </tr>
        <% @books.each do |abook| %>
        <tr height="20">
          <th scope="row">
            <%= link_to user_path(@user.id) do %>
              <%= image_tag(@user.get_profile_image(50,50)) %>
            <%end%></th>
          <td><%=link_to abook.title,book_path(abook.id) %></td>
          <td><%= abook.body %></td>
        </tr>
        <%end%>
      </table>
    </div>


  </div>
</div>